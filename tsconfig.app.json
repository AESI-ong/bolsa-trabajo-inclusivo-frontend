{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "noEmit": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "plugins": [{ "name": "next" }]
  },
  "include": ["src", "next-env.d.ts", "components/Footer.tsx", "components/Home/HeroSection.tsx", "components/Home/CategoriesSection.tsx", "components/Home/JobListSection.tsx", "components/JobDescriptionSection.tsx", "components/JobCard.tsx", "components/CategoryCard.tsx", "components/MyApplications", "components/UserMenu.tsx", "interfaces/Job.ts", "src/pages/RegisterForm", "app/registro/Logged.tsx", "app/registro/page.tsx", "app/login/page.tsx", "app/admin/page.tsx", "app/admin/nueva-oferta/page.tsx", "components/ApplicantInfo", "components/applicationCard.tsx"]
}
